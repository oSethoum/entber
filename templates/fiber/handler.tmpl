{{- if skip_schema_query .CurrentSchema | not}}
func Read{{ $pName }}(ctx *fiber.Ctx) error {
	id := ctx.Params("id")
	{{ $cName }}, err := db.Client.{{ $pName }}.Get(ctx.UserContext(), id)
	if err != nil {
		return StopWithError(ctx, fiber.StatusBadRequest, err)
	}
	return StopWithSuccess(ctx, "{{ $cNames }}:find-one", fiber.StatusOK, {{ $cName }})
}

func Read{{ $pNames }}(ctx *fiber.Ctx) error {
	query := new(ent.{{ $pName }}QueryInput)
	q := ctx.Query("query")
	if q != "" {
		err := json.Unmarshal([]byte(q), query)
		if err != nil {
			return StopWithError(ctx, fiber.StatusBadRequest, err)
		}
	}
	{{ $cNames }}, err := db.Client.{{ $pName }}.Query().SetInput(query).All(ctx.UserContext())
	if err != nil {
		return StopWithError(ctx, fiber.StatusBadRequest, err)
	}
	return StopWithSuccess(ctx, "{{ $cNames }}:find-many", fiber.StatusOK, {{ $cNames }})
}
{{- end}}

{{- if skip_schema_create .CurrentSchema | not}}
func Create{{ $pName }}(ctx *fiber.Ctx) error {
	body := new(ent.{{ $pName }}CreateInput)
	err := ctx.BodyParser(body)
	if err != nil {
		return StopWithError(ctx, fiber.StatusBadRequest, err)
	}
	{{ $cName }}, err := db.Client.{{ $pName }}.Create().SetInput(body).Save(ctx.UserContext())
	if err != nil {
		return StopWithError(ctx, fiber.StatusBadRequest, err)
	}
	return StopWithSuccess(ctx, "{{ $cNames }}:create-one", fiber.StatusOK, {{ $cName }})
}

func Create{{ $pNames }}(ctx *fiber.Ctx) error {
	body := []*ent.{{ $pName }}CreateInput{}
	err := ctx.BodyParser(&body)
	if err != nil {
		return StopWithError(ctx, fiber.StatusBadRequest, err)
	}
	if len(body) == 0 {
		return StopWithError(ctx, fiber.StatusBadRequest, errors.New("empty array body"))
	}
	builders := []*ent.{{ $pName }}Create{}
	for _, b := range body {
		builders = append(builders, db.Client.{{ $pName }}.Create().SetInput(b))
	}
	{{ $cNames }}, err := db.Client.{{ $pName }}.CreateBulk(builders...).Save(ctx.UserContext())
	if err != nil {
		return StopWithError(ctx, fiber.StatusBadRequest, err)
	}
	return StopWithSuccess(ctx, "{{ $cNames }}:create-many", fiber.StatusOK, {{ $cNames }})
}
{{- end}}

