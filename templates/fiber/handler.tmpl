	body := new(ent.{{ $pName }}UpdateInput)
	err := ctx.BodyParser(body)
	if err != nil {
		return StopWithError(ctx, fiber.StatusBadRequest, err)
	}
	{{ $cName }}, err := db.Client.{{ $pName }}.UpdateOneID(id).SetInput(body).Save(ctx.UserContext())
